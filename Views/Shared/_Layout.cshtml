<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentDashboard.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <header class="header">
            <div class="header-left">
                <div class="logo">
                    <div class="logo-icon"></div>
                </div>
                <div class="search-bar">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search by..." />
                </div>
            </div>
            <div class="header-right">
                <div class="header-icons">
                    <div class="icon-badge">
                        <i class="fas fa-star"></i>
                        <span>5456</span>
                    </div>
                    <div class="icon-badge">
                        <i class="fas fa-trophy"></i>
                        <span>5456</span>
                    </div>
                    <div class="icon-badge">
                        <i class="fas fa-gem"></i>
                        <span>5456</span>
                    </div>
                    <div class="icon-badge">
                        <i class="fas fa-bell"></i>
                        <span>5456</span>
                    </div>
                </div>
                <div class="user-profile">
                    <img src="~/images/avatar.png" alt="Profile" class="profile-avatar" />
                    <div class="profile-info">
                        <div class="profile-name">Phillip Vetrov</div>
                        <div class="profile-group">Group: DD 1234</div>
                    </div>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="language-selector">
                    <img src="~/images/uk-flag.png" alt="UK" class="flag-icon" />
                    <span>EN</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
            </div>
        </header>

        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-toggle">
                <i class="fas fa-expand-arrows-alt"></i>
            </div>
            <ul class="sidebar-menu">
                <li class="menu-item active">
                    <i class="fas fa-th"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-chart-line"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-star"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-bars"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-pencil-alt"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-comments"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-calendar"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-map-marker-alt"></i>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Profile")">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
                <li class="menu-item">
                    <i class="fas fa-credit-card"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-shopping-bag"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-microphone"></i>
                </li>
                <li class="menu-item">
                    <i class="fas fa-question-circle"></i>
                </li>
                <li class="menu-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
